<%- include('layouts/header') %>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 p-6">
    
    <% movies.forEach(movie => { %>
        <div class="relative group w-full h-[400px]">
            <div class="relative h-full w-full rounded-lg overflow-hidden shadow-lg">
                <!-- Image container that fills the entire card -->
                <div 
                    class="absolute inset-0 w-full h-full bg-cover bg-center transition-transform duration-300 group-hover:scale-105"
                    style="background-image: url('<%= movie.thumbnailURL %>');"
                ></div>
                
                <!-- Gradient overlay that's always visible but stronger on hover -->
                <div class="absolute inset-0 bg-gradient-to-t from-black via-black/40 to-transparent opacity-70 group-hover:opacity-90 transition-opacity duration-300"></div>
                
                <!-- Content container -->
                <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-2 group-hover:translate-y-0 transition-transform duration-300">
                    <h3 class="text-xl font-bold text-white truncate mb-2"><%= movie.title %></h3>
                    <p class="text-sm text-gray-300 mb-4"><%= movie.genre %> â€¢ <%= movie.year %></p>
                    <a 
                        href="/movie/<%= movie._id %>" 
                        class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition-colors duration-200 transform translate-y-4 group-hover:translate-y-0 opacity-0 group-hover:opacity-100"
                    >
                        Watch Now
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-play"><polygon points="5 3 19 12 5 21 5 3"/></svg>
                    </a>
                </div>
            </div>
        </div>
    <% }) %>
</div>

<%- include('layouts/footer') %>