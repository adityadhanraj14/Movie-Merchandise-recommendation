<%- include('layouts/header') %>

<div class="flex flex-col lg:flex-row gap-6 p-4">
    <!-- Video Player Section -->
    <div class="lg:w-3/4">
        <div class="relative">
            <!-- Video Player -->
            <div class="aspect-w-16 aspect-h-9 bg-black rounded-lg overflow-hidden shadow-lg">
                <video 
                    id="videoPlayer"
                    class="w-full h-full"
                    controls
                    src="<%= movie.videoURL %>"
                ></video>
            </div>

            <!-- Product Overlay Container -->
            <div id="productOverlay" class="absolute top-4 right-4 w-64">
                <!-- Products will be dynamically inserted here -->
            </div>
        </div>
        
        <!-- Movie Information -->
        <div class="mt-6 bg-gray-800 p-6 rounded-lg">
            <h1 class="text-3xl font-bold text-white"><%= movie.title %></h1>
            <div class="flex items-center mt-2 text-gray-400">
                <span><%= movie.genre %></span>
                <span class="mx-2">•</span>
                <span><%= movie.year %></span>
                <span class="mx-2">•</span>
                <span>★ <%= movie.metadata.rating %></span>
            </div>
            <p class="mt-4 text-gray-300"><%= movie.description %></p>
            
            <div class="mt-6 grid grid-cols-2 gap-4">
                <div>
                    <h3 class="text-lg font-semibold text-white">Cast</h3>
                    <p class="text-gray-400"><%= movie.metadata.actors.join(', ') %></p>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-white">Director</h3>
                    <p class="text-gray-400"><%= movie.metadata.director %></p>
                </div>
            </div>
        </div>
    </div>

    <!-- All Products Section -->
    <div class="lg:w-1/4">
        <div class="bg-gray-800 p-4 rounded-lg sticky top-4">
            <h2 class="text-xl font-semibold mb-4 text-white">Product Suggestion</h2>
            <div id="allProducts" class="space-y-4">
                <!-- Product suggestion items will be dynamically inserted here -->
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const video = document.getElementById('videoPlayer');
        const allProductsContainer = document.getElementById('allProducts');
        
        // Products data from backend
        const products = <%- JSON.stringify(products) %>;
        
        // Track active products
        let activeProductIds = new Set();
    
        // Create product tile for product suggestion container
        function createProductCard(product) {
            return `
                <div id="product-card-${product._id}" class="bg-gray-700 rounded-lg overflow-hidden">
                    <img src="${product.image_url}" 
                         alt="${product.product_name}" 
                         class="w-full h-40 object-cover">
                    <div class="p-4">
                        <h3 class="font-semibold text-white mb-2">${product.product_name}</h3>
                        <p class="text-gray-400 text-sm mb-2">
                            Appears at ${formatTime(product.starting_time)} - ${formatTime(product.end_time)}
                        </p>
                        <a href="${product.product_url}" 
                           target="_blank"
                           class="block w-full text-center bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded transition-colors duration-200">
                            View Product
                        </a>
                    </div>
                </div>
            `;
        }
    
        // Format seconds to MM:SS
        function formatTime(seconds) {
            const minutes = Math.floor(seconds / 60);
            const remainingSeconds = Math.floor(seconds % 60);
            return `${minutes}:${remainingSeconds.toString().padStart(2, '0')}`;
        }
    
        // Show product in product suggestion section
        function showProduct(product) {
            if (!activeProductIds.has(product._id)) {
                const productCard = document.createElement('div');
                productCard.innerHTML = createProductCard(product);
                allProductsContainer.appendChild(productCard);
                activeProductIds.add(product._id);
            }
        }
    
        // Hide product from suggestion section
        function hideProduct(productId) {
            if (activeProductIds.has(productId)) {
                const productCard = document.getElementById(`product-card-${productId}`);
                if (productCard) {
                    productCard.remove();
                    activeProductIds.delete(productId);
                }
            }
        }
    
        // Update products based on video timestamp
        video.addEventListener('timeupdate', () => {
            const currentTime = video.currentTime;
            
            products.forEach(product => {
                if (currentTime >= product.starting_time && currentTime <= product.end_time) {
                    showProduct(product);
                } else {
                    hideProduct(product._id);
                }
            });
        });
    
        // Clear products when video ends
        video.addEventListener('ended', () => {
            activeProductIds.forEach(productId => hideProduct(productId));
            activeProductIds.clear();
        });
    
        // Clear products when video is seeked
        video.addEventListener('seeking', () => {
            activeProductIds.forEach(productId => hideProduct(productId));
            activeProductIds.clear();
        });
    });
    </script> 
<%- include('layouts/footer') %>